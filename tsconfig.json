{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"types": ["bootstrap"],
		"baseUrl": ".",
		"paths": {
			"~/*": ["./public/*"],
			"@/app/*": ["./src/app/*"],
			"@/components/*": ["./src/components/*"],
			"@/constants/*": ["./src/constants/*"],
			"@/config/*": ["./src/config/*"],
			"@/hooks/*": ["./src/hooks/*"],
			"@/lib/*": ["./src/lib/*"],
			"@/providers/*": ["./src/providers/*"],
			"@/services/*": ["./src/services/*"],
			"@/store/*": ["./src/store/*"],
			"@/styles/*": ["./src/styles/*"],
			"@/translations/*": ["./src/translations/*"],
			"@/types/*": ["./src/types/*"],
			"@/ui/*": ["./src/ui/*"],
			"@/utils/*": ["./src/utils/*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		".eslintrc.json"
	],
	"exclude": ["node_modules"]
}
